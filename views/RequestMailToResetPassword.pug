doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        include ../public/components/header.pug
        link(rel="stylesheet", href="/css/RequestMailToResetPassword.css")
        title Lemon Teams: Request Mail to Reset Password
    body
        include ../public/layouts/navigation_withoutNotification.pug
        .container
            h1 Request mail to Reset Password
            - if(message !== undefined)
                .message-box
                    p= message
            .form
                form(method="post" action="")
                    input(type="email" placeholder="abc@xyz.com" name="email" required)
                    input(type="submit" value="Submit")
        include ../public/layouts/footer.pug
        script(src="/js/Login.js")