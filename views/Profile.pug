doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        include ../public/components/header.pug
        link(rel="stylesheet", href="/css/Profile.css")
        title Lemon Teams: #{user.name}
    body#body 
        include ../public/layouts/navigation.pug
        .container 
            .left 
                .top 
                    img(src=profile, alt="")
                .bottom 
                    h2.name #{user.name}
                    h4.email #{user.email}
                    .links 
                        - if (user.link1 !== "" && user.linkTitle1 !== "")
                            a(href=user.link1 target="_blank")
                                i.fa-solid.fa-link &nbsp; #{user.linkTitle1}
                        - if (user.link2 !== "" && user.linkTitle2 !== "")
                            a(href=user.link2 target="_blank")
                                i.fa-solid.fa-link &nbsp; #{user.linkTitle2}
                        - if (user.link3 !== "" && user.linkTitle3 !== "")
                            a(href=user.link3 target="_blank")
                                i.fa-solid.fa-link &nbsp; #{user.linkTitle3}
                        - if (user.link4 !== "" && user.linkTitle4 !== "")
                            a(href=user.link4 target="_blank")
                                i.fa-solid.fa-link &nbsp; #{user.linkTitle4}
            .right
                - if (isOurProfile == true)
                    form(action="/save-profile", method="post") 
                        .pronounce 
                            p Pronounce
                            input(type="text", placeholder="Pronounce" required value=user.pronounce name="pronounce")
                        .description 
                            p Description
                            textarea(name="description" placeholder="Description" required)= user.description
                        input.submit(type="submit" value="Save Changes")
                    .account-actions
                        a(href="/logout") Logout
                        a(href="/delete-account") Delete Account
                - else
                    .pronounce
                        p.highlighted Pronounce
                        p #{user.pronounce}
                    .description 
                        p.highlighted Description
                        p #{user.description}
        include ../public/layouts/footer.pug